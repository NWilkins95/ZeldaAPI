{
  "swagger": "2.0",
  "info": {
    "title": "Zelda API",
    "description": "A simple API to get information about characters and games in the Zelda series.\n\n**Authentication Notice:**\nAll `POST`, `PUT`, and `DELETE` routes require authorization (indicated by the lock icon). If you are not authenticated, you must manually copy and paste `https://zeldaapi.onrender.com/login` into your browser address bar to sign in via GitHub, after which you will be redirected back to the API documentation. Failure to do so will result in the API returning a 401 Unauthorized as a response.\n\nTo end your session, please copy and paste `https://zeldaapi.onrender.com/auth/logout` into your browser's address bar.\n\nAll routes are wrapped in centralized error handling. POST and PUT routes include validation logic and may return `422 Unprocessable Entity` if input is invalid.\n\n_Not affiliated with Nintendo._",
    "version": "1.0.0"
  },
  "host": "zeldaapi.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "securityDefinitions": {
    "GitHubOAuth": {
      "type": "oauth2",
      "flow": "accessCode",
      "authorizationUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "scopes": {
        "user": "Access your GitHub profile"
      }
    }
  },
  "paths": {
    "/api-docs": {
      "get": {
        "description": "Serves the Swagger UI documentation for the Zelda API",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/characters/": {
      "get": {
        "description": "Fetches a list of all Zelda characters in the database. Validates query parameters for pagination and sorting (if provided).",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Creates a new Zelda character record in the database. All fields are required. Validates required fields before saving.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Link"
                },
                "race": {
                  "example": "Hylian"
                },
                "gender": {
                  "example": "Male"
                },
                "age": {
                  "example": "17"
                },
                "era": {
                  "example": "Breath of the Wild"
                },
                "description": {
                  "example": "The main protagonist of Breath of the Wild, known for his courage and heroism. Wields the Master Sword and was Zelda's protector."
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity - Validation Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/characters/{id}": {
      "get": {
        "description": "Retrieves a specific Zelda character by their unique ID. Validates the ID format before fetching.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates an existing Zelda character by their unique ID. All fields are required. Validates required fields and ID format before updating.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Link"
                },
                "race": {
                  "example": "Hylian"
                },
                "gender": {
                  "example": "Male"
                },
                "age": {
                  "example": "17"
                },
                "era": {
                  "example": "Breath of the Wild"
                },
                "description": {
                  "example": "The main protagonist of Breath of the Wild, known for his courage and heroism. Wields the Master Sword and was Zelda's protector."
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity - Validation Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Deletes a specific Zelda character by their unique ID. Validates the ID format before deletion.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/games/": {
      "get": {
        "description": "Retrieves all Zelda games in the database. Validates query parameters for pagination and sorting (if provided).",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }

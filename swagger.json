          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates a specific Zelda game by its unique ID. All fields are required. Validates required fields and ID format before updating.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "example": "The Legend of Zelda: Breath of the Wild"
                },
                "launchDate": {
                  "example": "March 3, 2017"
                },
                "rating": {
                  "example": "E10+"
                },
                "publisher": {
                  "example": "Nintendo"
                },
                "platform": {
                  "example": "Nintendo Switch"
                },
                "timeline": {
                  "example": "Converged Timeline"
                },
                "sequels": {
                  "example": "Tears of the Kingdom"
                },
                "description": {
                  "example": "An open-world action-adventure game that redefined the Zelda series with its vast exploration and innovative gameplay mechanics, set thousands of years after all previous games in a reconverged timeline"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity - Validation Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Deletes a specific Zelda game by its unique ID. Validates the ID format before deletion.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {

      },
      "post": {
        "description": "Creates a new Zelda game in the database. All fields are required. Validates required fields and ID format before saving.",
        "security": [
          {
            "GitHubOAuth": ["user"]
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "example": "The Legend of Zelda: Breath of the Wild"
                },
                "launchDate": {
                  "example": "March 3, 2017"
                },
                "rating": {
                  "example": "E10+"
                },
                "publisher": {
                  "example": "Nintendo"
                },
                "platform": {
                  "example": "Nintendo Switch"
                },
                "timeline": {
                  "example": "Converged Timeline"
                },
                "sequels": {
                  "example": "Tears of the Kingdom"
                },
                "description": {
                  "example": "An open-world action-adventure game that redefined the Zelda series with its vast exploration and innovative gameplay mechanics, set thousands of years after all previous games in a reconverged timeline"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity - Validation Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/games/{id}": {
